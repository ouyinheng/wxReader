/* pages/ranklist/ranklist.wxss */
.page-group {
  width: 100%;
  height: 100vh;
  display: flex;

}
.rank {
  width: 80px;
  height: 100%;
  overflow: hidden;
  overflow-y: auto;
  border-right: 1rpx solid gainsboro;
}
.rank .rank-title {
  color: #606266;
  font-size: 14px;
  padding: 5px 0 5px 5px;
}
.list {
  width: 100%;
  height: 100%;
  position: relative;
}
.list .cls {
  width: 100%;
  box-sizing: border-box;
  padding: 10px;
  display: flex;
  justify-content: space-around;
  border-bottom: 1rpx solid gainsboro;
}
.list .cls .cls-item {
  width: 30px;
  padding: 5px 7px;
  border: 1rpx solid gainsboro;
  font-size: 13px;
  text-align: center;
  color: #303133;
  border-radius: 5px;
}
.list-item {
  position: absolute;
  top: 53px;
  left: 0;
  width: 100%;
  bottom: 0;
  overflow: hidden;
  overflow-y: auto;
  box-sizing: border-box;
  /* padding: 10px; */
}
.active, .rankacitve {
  color: RGB(237,66,75)!important;
  border-color: RGB(237,66,75)!important;
}
