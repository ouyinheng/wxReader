<view wx:if="{{noBook}}" style="width: 100%;height: calc(100vh)；"  bindtap='refresh'>
  <image src='/lib/images/noMessage.png' style="display: block;width: 200px;margin: 100px auto;" mode="aspectFit"></image>
</view>
<view class="weui-cells" wx:if="{{bookList.length>0}}">
  <view class="weui-cell book-item" wx:for="{{bookList}}" wx:item="" wx:key="{{index}}" bindtap='toSee' data-id="{{item._id}}">
      <view class="book-cover">
          <image mode="{{item.mode}}" src="https://statics.zhuishushenqi.com{{item.cover}}"></image>
      </view>
      <view class='book-intro'>
        <view class="book-title">{{item.title}}</view>
        <view class="book-anthor">{{item.author}} 著</view>
        <view class='book-list'>
          连载至: {{item.lastChapter}}
        </view>
      </view>
      <icon class="del" type="cancel" size="23" wx:if="{{isDel}}" catchtap='remove' data-id="{{item._id}}"></icon>
  </view>
</view>

<view class="icon-box del" bindtap='showdel' wx:if="{{bookList.length>0}}">
    <view class='iconfont icon-shezhi setup'></view>
</view>
<loading loading="{{loading}}" wx:if="{{loadshow}}"></loading>