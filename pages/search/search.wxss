.header {
  width: 99%;
  height: 30px;
  line-height: 30px;
  margin-bottom: 10px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border: 1px solid gray;
  border-radius: 4px;
}
.search-input {
  display: block;
  width: 70%;
  height: 30px;
  line-height: 30px;
  padding-left: 10px;
}
.search-btn {
  display: block;
  width: 30%;
  height: 30px;
  line-height: 30px;
  font-size: 14px;
}
.booklist {
  width: 100%;
  height: 100px;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.booklist .left {
  width: 20%;

}
.booklist .right {
  width: 75%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.title-sm {
  height: 20px;
  font-size: 14px;
  color:gray;
  white-space: nowrap;  
  text-overflow:ellipsis; 
  overflow:hidden;
}

/* weui */
.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result:before{
    display: none;
}
