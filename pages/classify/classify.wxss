.cls-group {
  width: 100%;
  height: 100vh;
  display: flex;
}
.left-title {
  width: 20%;
  max-width: 60px;
  height: 100%;
  border-right: 1rpx solid gainsboro;
}
.left-title view {
  text-align: center;
  font-size: 14px;
  padding: 5px 0;
}
.active {
  color: RGB(237,66,75);
}
.cls-right {
  width: 100%;
  height: 100vh;
  overflow: hidden;
  overflow-y: auto;
}
.title {
  width: 100%;
  text-align: center;
  position: relative;
}
.title::after {
  position: absolute;
  content: '';
  top: 50%;
  bottom: 50%;
  /* right: 50%; */
  left: 0;
  width: 50%;
  height: 1px;
  background-color: gainsboro;
  transform: scale(.5);
}
.title::before {
  position: absolute;
  content: '';
  top: 50%;
  bottom: 50%;
  /* right: 50%; */
  right: 0;
  width: 50%;
  height: 1px;
  background-color: gainsboro;
  transform: scale(.5);
}

.classify {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.card {
  width: 40%;
  padding: 5px;
  border-radius: 5px;
  background-color: #F2F6FC;
  margin: 5px;
  font-size: 12px;
  display: flex;
  justify-content: space-around;
}
.card .cover image {
  width: 45px;
  height: 60px;
}