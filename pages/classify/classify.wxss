.classify {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 10px 0;
}
.title {
  margin-left: 10px;
  border-left: 5px solid red;
  padding: 0 10px ;
}
.card {
  width: 40%;
  padding: 10px;
  box-shadow: 0 0 10px gainsboro;
  text-align: center;
  margin: 5px 0;
  
}
.count {
  color: gainsboro;
  font-size: 14px;
}
.card:active {
  box-shadow: 0 0 3px gainsboro;
  color: red;
}