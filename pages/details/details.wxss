.details {
  background-color: white;
  padding-top: 10px;
}
.header {
  width: 100%;
  padding: 0 5px;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.header .left {
  width: 25%;
}
.header .right {
  width: 70%;
  display: flex;
  flex-direction: column;
}
.right .title {
  color: #333333;
  font-size: 40rpx;
  font-weight: 400;
}
.header .right .title-sm {
  font-size: 14px;
  color: gray;
}
.introduce {
  width: 100%;
  height: 50px;
  /* line-height: 50px; */
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.introduce .intro-det {
  font-size: 14px;
  color: gray;
  width: 20%;
  display: flex;
  flex-direction: column;
  text-align: center;
}
.introduce .intro-num {
  color: black;
}
.longIntro {
  width: 100%;
  padding: 5px;
  margin-top: 10px;
}
.longIntro .title {
  display: block;
  border-left: 1px solid red;
  padding: 2px 10px 2px;
}
.longIntro .content {
  padding: 2px 20px 2px;
  font-size: 14px;
  color: gray;
}
.footer {
  width: 100%;
  height: 50px;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  border-top: 1px solid gainsboro;
  background: white;
  z-index: 10;
}
.footer .btn {
  width:100%;
  height: 50px;
  line-height: 50px;
  text-align: center;
  border-radius: 0;
}
.footer .btn:last-of-type {
   background: RGB(237,66,75); 
   color: #fff;
}

.flex-center {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.flex-center {
  font-size: 16px;
}