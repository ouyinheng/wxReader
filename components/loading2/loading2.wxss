/* components/loading2/loading2.wxss */
.skeleton {
  display: flex;
  position: relative;
  width: 100%;
  padding: 10px;
  box-sizing: border-box;
  background-color: white;
}
.img {
    width: 4.5rem;
    min-width: 4.5rem;
    height: 6.25rem;
    background: linear-gradient(to right, #ececf0 8%, #d3d3d9 18%, #ececf0 33%);
    background-size: 800px 45px;
    animation: shine 1s infinite;
}
.right {
    padding: 0 10px 10px;
}
.content {
    width: 10rem;
    height: .5rem;
    background: linear-gradient(to right, #ececf0 8%, #d3d3d9 18%, #ececf0 33%);
    background-size: 800px 45px;
    margin-bottom: .5rem;
    animation: shine 1s infinite;
}
.btn {
    position: absolute;
    width: 5rem;
    height: 1.5rem;
    background: linear-gradient(to right, #ececf0 8%, #d3d3d9 18%, #ececf0 33%);
    background-size: 800px 45px;
    bottom: 10px;
    right: 10px;
    font-size: .6rem;
    animation: shine 2s infinite;
}
@keyframes shine {
  0% {
    background-position: -468px 0
  }
  100% {
    background-position: 468px 0
  }
}