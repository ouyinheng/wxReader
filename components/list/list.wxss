/* components/list/list.wxss */
.o-list {
  width: 100%;
  display: flex;
}
.o-intro {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  padding: 0 10px;
  display: flex;
  flex-direction: column;
}
.cover {
  width: 80px;
  height: 110px;
}
.title {
  font-size: 16px;
  font-weight: bold;
  color: #303133;
}
.author,.lastChapter {
  font-size: 12px;
  color: #909399;
  margin-top: 2px;
}